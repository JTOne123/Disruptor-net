<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>Disruptor.HeapWalker</AssemblyName>
    <RootNamespace>Disruptor.HeapWalker</RootNamespace>
    <Title>Disruptor.HeapWalker</Title>
    <TargetFramework>net48</TargetFramework>
    <AllowUnsafeBlocks>false</AllowUnsafeBlocks>
    <OutputType>exe</OutputType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
  </ItemGroup>


  <ItemGroup>
    <ProjectReference Include="..\Disruptor\Disruptor.csproj"/>
    <ProjectReference Include="..\Disruptor.Tests\Disruptor.Tests.csproj"/>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Diagnostics.Runtime" Version="0.9.180305.1"/>
  </ItemGroup>

</Project>